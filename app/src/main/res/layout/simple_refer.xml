<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:weightSum="8.8">

    <RelativeLayout
        android:layout_weight=".8"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/refertoolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </com.google.android.material.appbar.AppBarLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_weight=".8"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/tvrefyourrefercode"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight=".8"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/tvreftotalreferjoinig"
            android:textSize="25dp"
            android:layout_centerVertical="true"

            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Refer Joining :5"
            android:textColor="#fff"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight=".8"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/Availablebalance"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Balance:"
            android:textStyle="bold"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_weight=".8"
        android:layout_width="match_parent"
        android:background="#A58A87"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="0dp">

        <Button
            android:id="@+id/addtomainbalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Add To Main Balance"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="22dp"
            android:textAllCaps="false"
            android:textColor="#000"
            android:background="#C0A3A3"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:textSize="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/refertext"
            android:textColor="#fff"
            android:textStyle="bold"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight=".8"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:id="@+id/btnrefinviteernt"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Invite and Earn"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:background="@drawable/referback"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp">
        <Button
            android:id="@+id/refhomebtn"
            android:text="Home"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:padding="10dp"
            android:textColor="#F1ECEC"
            android:background="#3C1D77"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/refearnmoney"
            android:text="Earn Money"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="#F1ECEC"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:background="#671075"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/reftoplist"
            android:text="TopList"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="#F1ECEC"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:background="#3C77A7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>